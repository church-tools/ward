{
  "name": "ward-tools",
  "version": "0.0.2",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -n app,functions -c green,blue \"bun --bun ng serve ward-tools --port 4201\" \"wrangler dev\"",
    "start:app": "bun --bun ng serve ward-tools --port 4201",
    "start:functions": "wrangler dev --remote",
    "build": "ng build --configuration production && bun run post-build.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "gen-types": "supabase gen types typescript --project-id bfozbjjsbwakbucgdpao > database.d.ts",
    "gen-icon-codes": "bun run src/app/shared/icon/gen-icon-codes.ts",
    "update-angular": "bun i @angular/cdk @angular/common @angular/core @angular/forms @angular/platform-browser @angular/router @angular/service-worker @angular/build @angular/cli @angular/compiler @angular/compiler-cli @angular/language-service -f"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^21.1.5",
    "@angular/common": "^21.1.5",
    "@angular/core": "^21.1.5",
    "@angular/forms": "^21.1.5",
    "@angular/platform-browser": "^21.1.5",
    "@angular/router": "^21.1.5",
    "@angular/service-worker": "^21.1.5",
    "@aws-sdk/client-s3": "^3.994.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@supabase/supabase-js": "^2.97.0",
    "pdf-lib": "^1.17.1",
    "quill": "^2.0.3",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler": "^21.1.5",
    "@angular/compiler-cli": "^21.1.5",
    "@angular/language-service": "^21.1.5",
    "@cloudflare/workers-types": "^4.20260219.0",
    "@fullhuman/postcss-purgecss": "^8.0.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "supabase": "^2.76.11",
    "typescript": "^5.9.3",
    "wrangler": "^4.67.0"
  }
}
