{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Edge + Wrangler",
      "configurations": [
        "Launch Headless Edge",
        "Attach Wrangler"
      ]
    }
  ],
  "configurations": [
    {
      "name": "Launch Headless Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4201",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4201",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach Wrangler",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
